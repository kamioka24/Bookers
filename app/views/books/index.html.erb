<main>
	<p class="destroyed"><%= flash[:notice] %></p>
	<h1 class="main-title">Books</h1>
	<table width="750">
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
			<% @books.each do |book| %>
				<tr align="left">
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book) %></td>
					<td><%= link_to "Edit", edit_book_path(book) %></td>
					<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
				</tr>
			<% end %>
	</table>
	<div class="new-form">
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
				<%= @book.errors.count %>error prohibited this book from being saved:<br>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>
			<p class="form">Title<br>
			<%= f.text_field :title %></p>

			<p class="form">Body<br>
			<%= f.text_area :body %></p>

			<p><%= f.submit 'Create Book'%></p>
		<% end %>
	</div>
</main>