<main>
	<h1 class="main-title">Editing Book</h1>
	<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	    <p class="form">Title<br>
	    <%= f.text_field :title %></p>
	    <p class="form">Body<br>
	    <%= f.text_area :body %></p>
	    <p><%= f.submit 'Update Book' %></p>
	<% end %>

	<p class="edit-btn"><%= link_to "Show", book_path(@book) %> |
	<%= link_to "Back", books_path %></p>
</main>